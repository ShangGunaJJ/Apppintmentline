
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
@this.Partial("Index-js")
@this.RefStyle("~/Content/wdtree/tree.css")
@this.RefScript("~/Content/wdtree/tree.js")
@this.RefStyle("~/Content/select2/select2.min.css")
@this.RefScript("~/Content/select2/select2.min.js")
@this.RefStyle("~/Content/wizard/wizard.css")
@this.RefScript("~/Content/wizard/wizard.js")
<script>
    var PerList = @this.RawSerialize(this.ViewBag.PerList);
    var PlaceList = @this.RawSerialize(this.ViewBag.PlaceList);
    var TranList = @this.RawSerialize(this.ViewBag.TranList);
</script>
<style>
    .input-group span {
        float: left;
        margin-left: 8px;
    }
</style>
<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$ace.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <button class="btn btn-primary" style="display:none" data-bind="click:Edit,attr:{disabled:!DataTable.SelectedModel()}"><i class="fa fa-pencil-square-o"></i>修改</button>
            <button class="btn btn-primary" data-bind="click:Delete,attr:{disabled:!DataTable.SelectedModel()}"><i class="fa fa-trash-o"></i>删除</button>
        </div>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <span>业务类型：</span> <select id="TransactionID" style="width:120px;" name="TransactionID" class="form-control required" data-bind="value:SearchModel().TransactionID">
                            @this.SelectOptions(this.ViewBag.TranList)
                        </select>
                        <span>地点：</span> <select id="PlaceId" name="PlaceId" style="width:120px;" class="form-control required" data-bind="value:SearchModel().PlaceId">
                            @this.SelectOptions(this.ViewBag.PlaceList)
                        </select>
                        <span>时间段：</span>  <select id="PeriodTimeID" style="width:120px;" name="PeriodTimeID" class="form-control required" data-bind="value:SearchModel().PeriodTimeID">
                            @this.SelectOptions(this.ViewBag.PerList)
                        </select> 
                        <span>状态：</span>  <select id="state" style="width:120px;" name="PeriodTimeID" class="form-control required" data-bind="value:SearchModel().state">
                           <option value="-7">请选择</option>
                                              <option value="0">未开始</option>
                                              <option value="1">进行中</option>
                                              <option value="2">已完成</option>
                                              <option value="-1">已失效</option>
                                              <option value="-2">失约</option> 
                        </select> 
                        <span>预约时间：</span>
                        <input type="text"  style="width:120px;"  class="form-control input-wdatepicker Wdate" onclick="WdatePicker({ dateFmt: 'yyyy-MM-dd' })" data-bind="dateString:SearchModel().AppDate" />

                        <input id="txt_keyword" type="text" class="form-control" placeholder="姓名/手机号" style="width: 200px; margin-left:10px;" data-bind="value:SearchModel().keyword">
                        <span class="input-group-btn" style="margin-left:0;">
                            <button id="btn_search" type="button" class="btn  btn-primary" data-bind="click:Search"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover" data-bind="with:DataTable">
        <thead>
            <tr>
                <th style="width:20px;"></th>
                <th>地点</th>
                <th>业务类型</th>
                <th>微信编号</th>
                <th>时间段</th>
                <th>姓名</th>
                <th>手机号</th>
                <th>身份证</th>
                <th>状态</th>
                <th>创建时间</th>
            </tr>
        </thead>
        <tbody data-bind="foreach:Models">
            <tr data-bind="click:$parent.SelectRow">
                <td data-bind="text:$parent.GetOrdinal($index())"></td>
                <td data-bind="text:PlaceName"></td>
                <td data-bind="text:TranName"></td>
                <td data-bind="text:weiKey"></td>
                <td data-bind="text:(AppointmentDate().split('T')[0]+' '+PeriodTime())"></td>
                <td data-bind="text:MName"></td>
                <td data-bind="text:Phone"></td>                
                <td data-bind="text:IdCard"></td>
                <td data-bind="text:(State()==0&&'未开始')||(State()==-1&&'已失效')||(State()==-2&&'失约')||(State()==1&&'进行中')||(State()==2&&'已完成')"></td>
                <td data-bind="dateString:CreateTime"></td> 
            </tr>
        </tbody>
        @this.Partial("_tfoot")
    </table>
</div>
